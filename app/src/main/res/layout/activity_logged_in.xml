<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.login.LoggedInActivity">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/userToken"
            android:ems="10"
            android:id="@+id/token"
            android:minHeight="48dp" android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="525dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="155dp"
            app:layout_constraintVertical_bias="1.0" android:autoSizeTextType="none" android:clickable="false"
    />
    <Button
            android:text="@string/copyToken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/copyBut"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/token" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="160dp" android:layout_marginEnd="160dp"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:text="@string/userToken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:autoSizeTextType="uniform" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="48dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>